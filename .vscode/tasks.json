{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build main.cpp and ide.cpp",
            "command": "cl.exe",
            "args": [
                "/Zi",                  // Включение отладочной информации
                "/EHsc",                // Включение стандартного обработчика исключений
                "/nologo",              // Отключение логотипа компилятора
                "/Fe${fileDirname}/build/main.exe", // Указание имени выходного файла
                "/Fo${fileDirname}/objects/",          // Указание директории для объектных файлов
                "main.cpp",             // Главный файл
                "ide.cpp",
                "circular_linked_list_ide.cpp"              // Файл реализации IDE
            ],
            "options": {
                "cwd": "${fileDirname}" // Текущая рабочая директория
            },
            "problemMatcher": [
                "$msCompile"            // Матчер для поиска ошибок компиляции
            ],
            "group": {
                "kind": "build",
                "isDefault": true      // Установка задачи по умолчанию
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}