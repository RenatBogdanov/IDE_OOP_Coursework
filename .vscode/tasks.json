{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build main.cpp and ide.cpp",
            "command": "cl.exe",
            "args": [
                "/Zi",                  // Включение отладочной информации
                "/EHsc",                // Включение стандартного обработчика исключений
                "/nologo",              // Отключение логотипа компилятора
                "/Fe${workspaceFolder}/build/main.exe", // Указание имени выходного файла
                "/Fo${workspaceFolder}/objects/",          // Указание директории для объектных файлов
                "src/main.cpp",             // Главный файл
                "src/ide.cpp",                // Файл реализации IDE
                "src/circular_linked_list_ide.cpp" // Файл реализации CircularLinkedList
            ],
            "options": {
                "cwd": "${workspaceFolder}" // Текущая рабочая директория
            },
            "problemMatcher": [
                "$msCompile"            // Матчер для поиска ошибок компиляции
            ],
            "group": {
                "kind": "build",
                "isDefault": true      // Установка задачи по умолчанию
            },
            "detail": "Task generated by Debugger."
        }
    ]
}